#version 330 core
layout(location = 0) out vec4 FragDiffuse;

in vec4 fragColour;
in vec2 textureData;

uniform sampler2D fontTexture;

void main()
{
	//FragDiffuse = vec4(fragColour.r * texture2D(fontTexture, textureData).r, fragColour.gb, 1.0f);
	FragDiffuse = fragColour * texture(fontTexture, textureData);
}