#version 330 core
layout(location = 0) in vec2 vertexPosition;
layout(location = 1) in vec4 vertexColour;
layout(location = 2) in vec4 vertexTexture;

out vec4 fragColour;
out vec4 textureData;

uniform mat4 camera;

void main()
{
	gl_Position = camera * vec4(vertexPosition, 0f, 1.0f);
	fragColour = vertexColour / 255.0f;

	textureData = vertexTexture;
}